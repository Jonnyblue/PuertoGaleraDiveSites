<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/indigo50"
                android:layout_height="wrap_content">

    <com.blueribbondivers.puertogaleradivesites.ProportionalImageView
        android:layout_width="80dp"
        android:id="@+id/list_imageView"
        android:layout_height="wrap_content"
        android:src="@drawable/salma"
        android:layout_margin="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Dive Site Name"
        android:layout_toRightOf="@+id/list_imageView"
        android:layout_alignTop="@+id/list_imageView"
        android:id="@+id/divesite_titleTextView"
        android:gravity="top"
        style="@style/BlackPrimary"
        android:alpha="87"
        android:padding="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Depth"
        android:gravity="bottom"
        android:textSize="14sp"
        android:id="@+id/divesite_depthTextView"
        android:layout_alignBottom="@+id/list_imageView"
        android:layout_toRightOf="@+id/list_imageView"
        android:padding="0dp"
        style="@style/BlackSecondary"

        />

</RelativeLayout>

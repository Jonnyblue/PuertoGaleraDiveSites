<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="150dp"
              android:layout_height="90dp"
    android:layout_marginBottom="10dp"
              android:elevation="14.5sp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Date"
        android:id="@+id/table_date_text_view"
        android:textAlignment="center"
        android:background="@drawable/border_indego_top"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/indigo50"
        android:baselineAligned="false">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="HW"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black87"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="LW"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black87"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="HW"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black87"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="LW"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black87"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/indigo50"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_gravity="center_horizontal"
    android:baselineAligned="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/table_time_text_view_1"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/table_time_text_view_2"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/table_time_text_view_3"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/table_time_text_view_4"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_white_bottom">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/table_height_text_view_1"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/table_height_text_view_2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/table_height_text_view_3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/table_height_text_view_4"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
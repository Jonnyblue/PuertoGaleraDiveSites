<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="150dp"
              android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
    android:id="@+id/facebook_image_relativelayout"
    >

    <TextView
        android:textColor="@color/white"
        android:background="@drawable/border_indego_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pictures from Blue Ribbon DIve Resort - Puerto Galera"
        android:id="@+id/facebook_image_textview"
        android:padding="5dp"
        android:hint="info"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:lines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@drawable/border_super_white_bottom">
    <ImageView
        android:layout_gravity="center"

        android:id="@+id/facebook_imageview"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ssiandiganwall"
        android:scaleType="centerCrop"

        android:background="@drawable/border_white_bottom"/>
    </LinearLayout>
</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Holo.Light" parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:listViewStyle">@style/awesomeListViewStyle</item>
        <item name="windowActionBar">true</item>
    </style>
    
<style name="awesomeListViewStyle" parent="@android:style/Widget.ListView">
    <item name="android:divider">#0ea8b4</item>
    <item name="android:dividerHeight">1px</item>
    <item name="android:fadingEdge">none</item>
</style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/indigo700</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:background">@color/indigo500</item>
        <item name="background">@color/indigo500</item>

        <!-- Support library compatibility -->

    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">#FFF</item>
    </style>


    

</resources>
